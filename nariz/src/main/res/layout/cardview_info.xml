<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="10dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/titleCardInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:padding="8dp"
                android:text="@string/title_peques"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:textSize="17sp" />

        <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/lineCardInfo"
                android:layout_below="@+id/titleCardInfo">
        </View>

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageViewCardInfo"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_face_black_24dp"
                android:layout_marginStart="11dp"
                android:layout_below="@+id/lineCardInfo"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:padding="8dp"
                android:text="@string/coment"
                android:textColor="#666"
                android:textSize="14sp"
                android:id="@+id/infoCardInfo"
                android:layout_below="@+id/lineCardInfo"
                android:layout_toEndOf="@+id/titleCardInfo"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
